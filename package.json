{
  "name": "haqei-analyzer",
  "version": "1.0.0",
  "description": "HAQEI Triple OS Analysis System - Visual & Behavior Testing",
  "main": "emergency_haqei.html",
  "type": "module",
  "scripts": {
    "build": "node scripts/build-production.cjs",
    "build:production": "node scripts/build-production.cjs",
    "build:simple": "echo 'Build complete - static files ready'",
    "start": "node cipher-server.js",
    "dev": "node cipher-server.js --dev",
    "cipher:start": "node cipher-server.js",
    "claude": "claude-mcp-exec",
    "mcp:setup": "./start-mcp-environment.sh",
    "mcp:generate": "node generate-mcp-config.js",
    "mcp:start": "npm run mcp:generate && echo '✅ MCP設定生成完了'",
    "mcp:claude": "npm run mcp:setup && claude --mcp-config claude-mcp-config.json",
    "mcp:claude:unsafe": "npm run mcp:setup && claude --mcp-config claude-mcp-config.json --dangerously-skip-permissions",
    "mcp:unsafe": "npm run mcp:claude:unsafe",
    "mcp:resume": "npm run mcp:setup && claude -r --mcp-config claude-mcp-config.json",
    "mcp:resume:unsafe": "npm run mcp:setup && claude -r --mcp-config claude-mcp-config.json --dangerously-skip-permissions",
    "dev:swarm": "node scripts/dev-swarm.js",
    "dev:swarm:resume": "node scripts/dev-swarm.js --resume=true",
    "test:behavior": "node .visual-behavior-tests/behavior-test.js",
    "test:e2e": "npx playwright test",
    "test:all": "npm run test:behavior && npm run test:e2e",
    "test:visual": "node .visual-behavior-tests/visual-test.js",
    "test:performance": "node .visual-behavior-tests/performance-test.js",
    "test:accessibility": "node .visual-behavior-tests/accessibility-test.js",
    "pdca:evaluate": "node tests/pdca-evaluation.js",
    "pdca:evaluate:15": "node tests/pdca-evaluation.js --users=15",
    "pdca:evaluate:20": "node tests/pdca-evaluation.js --users=20",
    "pdca:evaluate:30": "node tests/pdca-evaluation.js --users=30",
    "deploy": "npm run build:production && npx wrangler pages publish dist",
    "deploy:preview": "npm run build:production && npx wrangler pages publish dist --branch preview",
    "serve:dist": "npx http-server dist -p 8789 -c-1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.32",
    "@playwright/test": "^1.40.0",
    "claude-talk-to-figma-mcp": "^0.6.1",
    "clean-css": "^5.3.3",
    "eslint": "^8.0.0",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "playwright": "^1.54.2",
    "prettier": "^3.0.0",
    "puppeteer": "^24.16.0",
    "terser": "^5.43.1",
    "ts-node": "^10.9.2"
  },
  "keywords": [
    "haqei",
    "triple-os",
    "i-ching",
    "haqei-philosophy",
    "visual-testing",
    "behavior-testing"
  ],
  "author": "HAQEI Development Team",
  "license": "MIT"
}
