# =====================================================================
# HAQEI Analyzer Environment Configuration Template
# =====================================================================
# 目的: HAQEIプロジェクトの環境変数設定テンプレート
# 使用方法: このファイルを .env にコピーして値を設定
# セキュリティ: 本番環境では必ず強力な値に変更してください
# 
# 更新: 2025-08-03 - Vue 3統合・Migration 002対応
# =====================================================================

# === データベース設定 ===

# Supabase設定 (推奨)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your-supabase-access-token

# ローカルPostgreSQL設定 (開発用)
DATABASE_URL=postgresql://postgres:password@localhost:5432/haqei_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=haqei_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# === アプリケーション設定 ===

# 環境指定
NODE_ENV=development
VITE_APP_ENV=development

# アプリケーション基本設定
VITE_APP_NAME=HAQEI Analyzer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=HArmony-QI-Energy-Intelligence Analyzer

# Triple OS Architecture設定
VITE_ENABLE_TRIPLE_OS=true
VITE_ENABLE_ICHING_SYSTEM=true
VITE_ENABLE_BUNENJIN_PHILOSOPHY=true

# === セキュリティ設定 ===

# JWT設定 (Supabase使用時は自動設定)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d

# CORS設定
VITE_CORS_ORIGIN=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# CSRFトークン
CSRF_SECRET=your-csrf-secret-key-minimum-32-characters

# === プライバシー・データ保護設定 ===

# bunenjin哲学準拠設定
VITE_PRIVACY_FIRST=true
VITE_LOCAL_STORAGE_PRIMARY=true
VITE_DATA_MINIMIZATION=true
VITE_USER_SOVEREIGNTY=true

# GDPR準拠設定
VITE_GDPR_COMPLIANCE=true
VITE_DATA_RETENTION_YEARS=7
VITE_AUTO_DELETE_ENABLED=true

# データ暗号化設定
ENCRYPTION_KEY=your-encryption-key-minimum-32-characters
DATA_ENCRYPTION_ENABLED=true

# === パフォーマンス最適化設定 ===

# キャッシュ設定
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# データベース接続プール
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# クエリ最適化
VITE_ENABLE_QUERY_OPTIMIZATION=true
VITE_MAX_QUERY_TIME_MS=100

# === Vue 3統合設定 ===

# Vite開発サーバー設定
VITE_HOST=0.0.0.0
VITE_PORT=5173
VITE_HMRS_PORT=24678

# Vue 3 DevTools
VITE_VUE_DEVTOOLS=true

# TypeScript設定
VITE_TS_CHECK=true
VITE_TS_STRICT=true

# === リアルタイム機能設定 ===

# WebSocket設定
VITE_WEBSOCKET_ENABLED=true
VITE_WEBSOCKET_URL=ws://localhost:3001

# PostgreSQL NOTIFY/LISTEN
VITE_PG_NOTIFY_ENABLED=true
VITE_REALTIME_UPDATES=true

# === ログ・監視設定 ===

# ログレベル
LOG_LEVEL=info
VITE_LOG_LEVEL=warn

# エラー追跡
VITE_ERROR_TRACKING=true
SENTRY_DSN=your-sentry-dsn-url

# パフォーマンス監視
VITE_PERFORMANCE_MONITORING=true

# === 分析・統計設定 ===

# Google Analytics (オプション)
VITE_GA_TRACKING_ID=
VITE_GA_ENABLED=false

# 匿名統計 (bunenjin哲学準拠)
VITE_ANONYMOUS_ANALYTICS=true
VITE_PRIVACY_SAFE_ANALYTICS=true

# === 多言語・国際化設定 ===

# 言語設定
VITE_DEFAULT_LOCALE=ja
VITE_SUPPORTED_LOCALES=ja,en,zh
VITE_FALLBACK_LOCALE=ja

# タイムゾーン
VITE_DEFAULT_TIMEZONE=Asia/Tokyo

# === メール・通知設定 ===

# SMTP設定 (オプション)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@haqei.app

# === ファイルストレージ設定 ===

# Supabase Storage (推奨)
VITE_SUPABASE_STORAGE_BUCKET=haqei-files

# AWS S3 (代替オプション)
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=haqei-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# === サードパーティ統合 ===

# OpenAI API (AI機能用・オプション)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Stripe (決済機能用・オプション)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# === 開発・テスト設定 ===

# テスト設定
VITEST_ENABLED=true
VITEST_COVERAGE=true
E2E_TESTS_ENABLED=true

# デバッグ設定
DEBUG=haqei:*
VITE_DEBUG_MODE=true

# === プロダクション設定 ===

# SSL/TLS設定
FORCE_HTTPS=true
HSTS_ENABLED=true

# CDN設定
CDN_URL=https://cdn.haqei.app
STATIC_FILES_CDN=true

# === バックアップ・復旧設定 ===

# 自動バックアップ
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# S3バックアップ
BACKUP_S3_BUCKET=haqei-backups
BACKUP_S3_REGION=ap-northeast-1

