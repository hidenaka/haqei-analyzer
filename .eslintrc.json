{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "no-var": "error",
    "camelcase": ["error", { "properties": "never" }],
    "max-lines": ["warn", 500],
    "max-lines-per-function": ["warn", 50],
    "complexity": ["warn", 10]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "archives/",
    "*.min.js"
  ]
}