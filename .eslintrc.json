{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-properties": [
      "error",
      {
        "object": "Math",
        "property": "random",
        "message": "Math.random() is prohibited for deterministic behavior. Use SeedableRandom instead."
      }
    ],
    "no-restricted-globals": [
      "error",
      {
        "name": "Math.random",
        "message": "Math.random() is prohibited. Use SeedableRandom from /public/js/core/SeedableRandom.js instead."
      }
    ],
    "no-console": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }]
  },
  "overrides": [
    {
      "files": ["*.test.js", "test-*.js", "*-test.js"],
      "env": {
        "jest": true
      }
    }
  ],
  "globals": {
    "SeedableRandom": "readonly",
    "ContextTypeSystem": "readonly",
    "ContextAwarePrimaryLineSelector": "readonly"
  }
}