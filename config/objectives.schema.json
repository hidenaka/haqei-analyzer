{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HAQEI Objectives Configuration Schema",
  "description": "Schema for objectives.json with primitive-only enforcement",
  "type": "object",
  "required": ["primitiveOnly", "objectives"],
  "additionalProperties": false,
  "properties": {
    "primitiveOnly": {
      "type": "boolean",
      "const": true,
      "description": "Must be true to enforce primitive-only principle"
    },
    "objectives": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["weights"],
          "additionalProperties": false,
          "properties": {
            "weights": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "basic": {"type": "number", "minimum": 0, "maximum": 1},
                "potential": {"type": "number", "minimum": 0, "maximum": 1},
                "stability": {"type": "number", "minimum": 0, "maximum": 1},
                "safety": {"type": "number", "minimum": 0, "maximum": 1},
                "volatility": {"type": "number", "minimum": 0, "maximum": 1}
              },
              "not": {
                "anyOf": [
                  {"required": ["total"]},
                  {"properties": {"total": {}}}
                ]
              },
              "description": "Primitive indicators only - total is forbidden"
            },
            "excludes": {
              "type": "array",
              "items": {"type": "string"},
              "description": "Explicitly excluded indicators"
            },
            "priority": {
              "type": "string",
              "description": "Objective priority classification"
            }
          }
        }
      },
      "description": "Objective function definitions"
    }
  }
}